{
	"manifest_version": 3,
	"name": "omnibox",
	"version": "0.1.1",
	"description": "A browser extension that adds a command palette to the browser",
	"author": "Lasse Kuechler <lasse@ukuechler.de>",
	"browser_specific_settings": {
		"gecko": {
			"id": "omniboxextension@nlug.de"
		}
	},
	"permissions": ["tabs", "bookmarks", "theme"],
	"background": {
		"scripts": ["background.js"]
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"commands": {
		"open-input": {
			"suggested_key": {
				"default": "Ctrl+P",
				"mac": "MacCtrl+P"
			},
			"description": "Open the input box"
		}
	}
}
