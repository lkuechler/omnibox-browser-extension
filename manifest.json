{
	"manifest_version": 3,
	"name": "omnibox",
	"version": "0.2.3",
	"description": "A browser extension that adds a command palette to the browser",
	"author": "Lasse Kuechler <lasse@ukuechler.de>",
	"browser_specific_settings": {
		"gecko": {
			"id": "omniboxextension@nlug.de"
		}
	},
	"permissions": ["tabs", "bookmarks"],
	"background": {
		"scripts": ["background.js"],
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"commands": {
		"open-input": {
			"suggested_key": {
				"default": "Ctrl+P",
				"mac": "MacCtrl+P"
			},
			"description": "Open the input box"
		}
	}
}
